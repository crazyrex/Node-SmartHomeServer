#!/bin/bash

pushd `dirname $0` > /dev/null
SCRIPTPATH=`pwd`
popd > /dev/null

npm install --prod
node $SCRIPTPATH/dist.js

# Remove Old cronfile
sudo rm -vf $/etc/cron.d/Node-VeraSmartHomeServer

# Re-link cronfile (in case directory has moved, etc)
sudo ln -svf $SCRIPTPATH/../dist/crontab /etc/cron.d/Node-SmartHomeServer
